<p id="notice"><%= notice %></p>

<h1>Current Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Rent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_addresses.each do |current_address| %>
      <tr>
        <td><%= current_address.address %></td>
        <td><%= current_address.rent %></td>
        <td><%= link_to 'Show', current_address %></td>
        <td><%= link_to 'Edit', edit_current_address_path(current_address) %></td>
        <td><%= link_to 'Destroy', current_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Current Address', new_current_address_path %>
